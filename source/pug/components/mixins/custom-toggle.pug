mixin custom-toggle(options = {})
  - const classMods = options.classMods?.map((mod) => `custom-toggle--${mod}`) || false
  - const inputLabel = options.inputLabel || false
  - const inputType = options.inputType || "checkbox"
  - const inputId = options.inputId || false
  - const inputChecked = options.inputChecked || false
  - const inputName = options.inputName || false
  - const inputValue = options.inputValue || false

  .custom-toggle(class=classMods)&attributes(attributes)
    label
      input(type=inputType, value=inputValue, id=inputId, name=inputName, checked=inputChecked)
      span.custom-toggle__icon
      if inputLabel
        span.custom-toggle__label!=inputLabel
